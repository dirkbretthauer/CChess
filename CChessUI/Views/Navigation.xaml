<UserControl x:Class="CChessUI.Views.Navigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom">
        <Button Command="{Binding MoveBeginCommand}" HorizontalAlignment="Center"
                    Style="{StaticResource LeftArrowStyle}" Height="25" Width="25" Margin="5"/>
        <Button Command="{Binding MoveBackwardCommand}" HorizontalAlignment="Center"
                    Style="{StaticResource LeftArrowStyle}" Height="25" Width="25" Margin="5"/>
        <Button Command="{Binding MoveForwardCommand}" HorizontalAlignment="Center"
                    Style="{StaticResource RightArrowStyle}" Height="25" Width="25" Margin="5"/>
        <Button Command="{Binding MoveEndCommand}" HorizontalAlignment="Center"
                    Style="{StaticResource RightArrowStyle}" Height="25" Width="25" Margin="5"/>
    </StackPanel>
</UserControl>
